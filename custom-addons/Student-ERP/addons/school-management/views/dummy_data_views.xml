<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_dummy_data_form" model="ir.ui.view">
    <field name="name">school.dummy.generator.form</field>
    <field name="model">school.dummy.generator</field>
    <field name="arch" type="xml">
      <form string="Generate Dummy Data">
        <footer>
          <button name="generate_dummy_data"
                  string="Generate Dummy Data"
                  type="object"
                  class="btn-primary"/>
          <button string="Cancel" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_dummy_data" model="ir.actions.act_window">
    <field name="name">Generate Dummy Data</field>
    <field name="res_model">school.dummy.generator</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <!-- <menuitem id="dummy_data_menu" name="Generate Dummy Data" parent="school_reports_menu" action="action_dummy_data"/> -->
  <menuitem id="dummy_data_menu"
            name="Generate Dummy Data"
            parent="school_management_menu"
            action="action_dummy_data"/>
</odoo>
