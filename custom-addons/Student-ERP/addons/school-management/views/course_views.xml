<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id='view_course_list' model='ir.ui.view'>
            <field name='name'>school.course.list</field>
            <field name='model'>school.course</field>
            <field name='arch' type='xml'>
                <list string='Courses'>
                    <field name='name'/>
                    <field name='code'/>
                    <field name='status'/>
                </list>
            </field>
        </record>

        <record id='view_course_form' model='ir.ui.view'>
            <field name='name'>school.course.form</field>
            <field name='model'>school.course</field>
            <field name='arch' type='xml'>
                <form string='Course'>
                    <sheet>
                        <group>
                            <field name='name'/>
                            <field name='code'/>
                            <field name='credits'/>
                            <field name='status'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id='course_action' model='ir.actions.act_window'>
            <field name='name'>Courses</field>
            <field name='res_model'>school.course</field>
            <field name='view_mode'>list,form</field>
        </record>

        <menuitem id='course_menu' name='Courses' parent='school_management_menu' action='course_action'/>

    </data>
</odoo>