<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <data>
        <record id="view_fee_list" model="ir.ui.view">
            <field name='name'>school.fee.list</field>
            <field name='model'>school.fee</field>
            <field name='arch' type="xml">
                <list string="Fees">
                    <field name="student_id"/>
                    <field name="amount_display" string="Amount"/>
                    <field name="fee_type"/>
                    <field name="status"/>
                    <field name="due_date"/>
                </list>
            </field>
        </record>

        <record id="view_fee_form" model="ir.ui.view">
            <field name='name'>school.fee.form</field>
            <field name='model'>school.fee</field>
            <field name='arch' type="xml">
                <form string="Fee">
                    <sheet>
                        <group>
                            <field name="student_id"/>
                            <field name="amount_display" string="Amount"/>
                            <field name="fee_type"/>
                            <field name="status"/>
                            <field name="due_date"/>
                            <field name="payment_date"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="fee_action" model="ir.actions.act_window">
            <field name="name">Fees</field>
            <field name="res_model">school.fee</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="fee_menu" name="Payments" parent="school_management_menu" action="fee_action"/>

    </data>
</odoo>