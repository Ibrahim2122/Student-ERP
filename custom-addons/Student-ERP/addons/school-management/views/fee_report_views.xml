<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Pivot: Total Fees by Paid vs Unpaid -->
    <record id="view_fee_pivot" model="ir.ui.view">
      <field name="name">school.fee.pivot</field>
      <field name="model">school.fee</field>
      <field name="arch" type="xml">
        <pivot string="Fees Report">
          <field name="student_id" type="row"/>
          <field name="paid_state" type="col"/>
          <field name="amount" type="measure"/>
        </pivot>
      </field>
    </record>

    <!-- Graph: Total Fees by Paid vs Unpaid -->
    <record id="view_fee_graph" model="ir.ui.view">
      <field name="name">school.fee.graph</field>
      <field name="model">school.fee</field>
      <field name="arch" type="xml">
        <graph string="Paid vs Unpaid Fees" type="pie">
          <field name="paid_state" type="row"/>
          <field name="amount" type="measure"/>
        </graph>
      </field>
    </record>

    <!-- Action -->
    <record id="fee_report_action" model="ir.actions.act_window">
      <field name="name">Fees Reports</field>
      <field name="res_model">school.fee</field>
      <field name="view_mode">pivot,graph</field>
    </record>

    <!-- Menu under Reports -->
    <menuitem id="fee_reports_menu" name="Fees Reports"
              parent="school_reports_menu" action="fee_report_action"/>

  </data>
</odoo>
